<!DOCTYPE html>
<html>
<head>
    <title>
        <% if @page_title %>
            Coding Buzz | <%= @page_title %>
        <% else %>
            Coding Buzz | where (software) craftsmanship meets passion
        <% end %>
    </title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= analytics_init if Rails.env.production? %>
</head>
<body>
    <!-- <div id="viewport" data-enhance="false"> -->
        <%= yield :header_image %>
        <div id="main-content-wrapper">
            <div id="content">
                <%= yield %>
            </div>
        </div>
        <%= render "layouts/menu_slider" %>
    <!-- </div> -->
</body>
</html>

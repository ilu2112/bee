<div id="header-image" style="background-image: url(<%= @page_image %>);">
    <div class="overlay-gradient"></div>
    <div class="inner-text">
        <% if (not defined?(hide_title)) || hide_title == false %>
            <h1 class="page-title">
                <%= @page_title %>
            </h1>
        <% end %>
        <div class="page-description">
            <%= @page_summary %>
        </div>
    </div>
</div>